module Fonte
  module Parsers
    grammar Word
      rule quoted_word
        QUOTE word:word? QUOTE {
          def value
            word.value
          end
        }
      end

      rule word
        (ESCAPED_QUOTE / !QUOTE .)* {
          def value
            text_value
          end
        }
      end

      rule SPACE
        " "+
      end

      rule QUOTE
        '"'
      end

      rule ESCAPED_QUOTE
        '\"'
      end
    end
  end
end
